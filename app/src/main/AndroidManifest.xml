<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="satoshi.app.ideamosaic"
    android:versionCode="7"
    android:versionName="1.0.7">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/morecolor_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true">
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="IdeaMosaicMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="IdeaMosaicListView"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IdeaMosaicMatrixButton"
            android:screenOrientation="portrait"/>
        <activity
            android:name="IdeaMosaicSearchListView"
            android:screenOrientation="portrait"/>
        <activity
            android:name="IdeaMosaicTutorial"
            android:screenOrientation="portrait"/>
        <activity
            android:name="IdeaMosaicMindMapListView"
            android:screenOrientation="portrait"/>
        <activity
            android:name="IdeaMosaicCreateMindMap"
            android:screenOrientation="portrait"/>
    </application>

</manifest>